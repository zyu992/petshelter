<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ca.mcgill.ecse321.petshelter.dao.ApplicationMapper">
    <resultMap id="BaseResultMap" type="ca.mcgill.ecse321.petshelter.entity.Application">
        <id property="applicationId" column="application_id"/>
        <result property="message" column="application_is_accepted"/>
        <result property="isAccepted" column="application_is_accepted"/>
        <result property="isClosed" column="application_is_closed"/>
        <result property="date" column="application_date"/>
        <association property="applicant" javaType="ca.mcgill.ecse321.petshelter.entity.User">
            <id property="userId" column="user_id"/>
            <result property="username" column="username"/>
            <result property="email" column="email"/>
        </association>
        <association property="post" javaType="ca.mcgill.ecse321.petshelter.entity.Post">
            <id property="postId" column="post_id"/>
        </association>
    </resultMap>


    <select id="findAll" resultMap="BaseResultMap">
        select * from applications
            left join users on application_applicant_id = user_id
            left join posts on application_post_id = post_id
    </select>

    <select id="findById" resultMap="BaseResultMap">
        select * from applications
            left join users on application_applicant_id = user_id
            left join posts on application_post_id = post_id
            where application_id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="applicationId" keyColumn="application_id"
            parameterType="ca.mcgill.ecse321.petshelter.entity.Application">
        <bind name="applicantId" value="applicant.getUserId()"/>
        <bind name="postId" value="post.getPostId()"/>
        insert into applications
            (application_applicant_id, application_post_id, application_message, application_date)
            values
            (#{applicantId}, #{postId}, #{message}, #{date})
    </insert>

    <update id="update" parameterType="ca.mcgill.ecse321.petshelter.entity.Application">
        update applications
        set application_is_accepted = #{isAccepted}, application_is_closed = #{isClosed}
        where application_id = #{applicationId}
    </update>

</mapper>