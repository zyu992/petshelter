<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ca.mcgill.ecse321.petshelter.dao.PostMapper">
    <resultMap id="BaseResultMap" type="ca.mcgill.ecse321.petshelter.entity.Post">
        <id property="postId" column="post_id"/>
        <result property="date" column="post_date"/>
        <result property="isClosed" column="post_is_closed"/>
        <association property="postedBy" javaType="ca.mcgill.ecse321.petshelter.entity.User">
            <id property="userId" column="user_id"/>
            <result property="username" column="username"/>
            <result property="email" column="email"/>
        </association>
        <association property="adopter" javaType="ca.mcgill.ecse321.petshelter.entity.User">
            <id property="userId" column="post_adopter_id"/>
        </association>
        <association property="pet" javaType="ca.mcgill.ecse321.petshelter.entity.Pet">
            <id property="petId" column="pet_id"/>
            <result property="petName" column="pet_name"/>
            <result property="age" column="pet_age"/>
            <result property="species" column="pet_species"/>
        </association>
        <collection property="applications" ofType="ca.mcgill.ecse321.petshelter.entity.Application" javaType="list">
            <id property="applicationId" column="application_id"/>
        </collection>
    </resultMap>

    <select id="findAll" resultMap="BaseResultMap">
        select * from posts
            left join users on post_by_id = user_id
            left join pets on post_pet_id = pet_id
            left join applications on post_id = application_post_id
    </select>

    <select id="findById" parameterType="Integer" resultMap="BaseResultMap">
        select * from posts
            left join users on post_by_id = user_id
            left join pets on post_pet_id = pet_id
            left join applications on post_id = application_post_id
        where post_id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="postId" keyColumn="post_id"
            parameterType="ca.mcgill.ecse321.petshelter.entity.Post">
        <bind name="postedById" value="postedBy.getUserId()"/>
        <bind name="postedPetId" value="pet.getPetId()"/>
        insert into posts (post_by_id, post_pet_id, post_date)
        values (#{postedById}, #{postedPetId}, #{date})
    </insert>

    <update id="update" parameterType="ca.mcgill.ecse321.petshelter.entity.Post">
        <bind name="adopterId" value="adopter.getUserId()"/>
        update posts
        set post_is_closed = #{isClosed}, post_adopter_id = #{adopterId}
        where post_id = #{postId}
    </update>
</mapper>