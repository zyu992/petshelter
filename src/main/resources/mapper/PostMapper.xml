<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="PostMapper">
    <resultMap id="BaseResultMap" type="ca.mcgill.ecse321.petshelter.entity.Post">
        <id property="postId" column="post_id"/>
        <result property="date" column="post_date"/>
        <result property="isClosed" column="post_is_closed"/>
        <association property="postedBy" javaType="ca.mcgill.ecse321.petshelter.entity.User"
                     resultMap="UserMapper.BaseResultMap"/>
        <association property="pet" javaType="ca.mcgill.ecse321.petshelter.entity.Pet"
                     resultMap="PetMapper.BaseResultMap"/>
        <collection property="applications" ofType="ca.mcgill.ecse321.petshelter.entity.Application"
                    resultMap="Application.BaseResultMap"/>
    </resultMap>
</mapper>