    <resultMap id="BaseResultMap" type="ca.mcgill.ecse321.petshelter.entity.User">
        <id property="userId" column="user_id"/>
        <result property="username" column="username"/>
        <result property="password" column="password"/>
        <result property="email" column="email"/>
    </resultMap>

        <select id="findAll" resultType="User" resultMap="BaseResultMap">
            select * from users
        </select>
        <select id="findById" parameterType="Integer">
            select * from users
                where user_id = #{id}
        </select>
        <select id="findByUsername" parameterType="String">
            select * from users
                where userName = #{username}
        </select>
        <insert id="insert" useGeneratedKeys="true" keyProperty="userId" keyColumn="userId"
                parameterType="ca.mcgill.ecse321.petshelter.entity.User">
