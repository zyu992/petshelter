<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ca.mcgill.ecse321.petshelter.dao.PetDao">
    <resultMap id="BaseResultMap" type="ca.mcgill.ecse321.petshelter.entity.Pet">
        <id property="petId" column="pet_id"/>
        <result property="petName" column="pet_name"/>
        <result property="age" column="pet_age"/>
        <result property="species" column="pet_species"/>
    </resultMap>

    <select id="findAll" resultMap="BaseResultMap">
        select * from pets
    </select>

    <select id="findById" parameterType="Integer" resultMap="BaseResultMap">
        select * from pets where pet_id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="petId" keyColumn="pet_id"
            parameterType="ca.mcgill.ecse321.petshelter.entity.Pet">
        insert into pets (pet_name, pet_age, pet_species) values (#{petName}, #{age}, #{species})
    </insert>

</mapper>